        <div class="header-left">
          <a href="/">Home</a>
          <a href="/search">Search</a>
          <a href="/mylist">My list</a>
        </div>
    </header>
    <div id="card">  
    <% data.forEach(item=>{%>
        <div id="subcard">  
        <h3><%= item.title %></h3>
        <p><%= item.company %></p>
        <p><%= item.location %></p>
        <p> Url: <a href="<%=item.url%>"> <%=item.url%></a></p>

        <form action="/detalies/<%=item.id%>" method="get">
        <input type="submit" value="view Detailes">
        </form>
        </div>
    <%})%>
    </div>
</body>
